<%- include('../../partials/header.ejs') %>
<div class="container mt-5 p-3">
  <h2 class="text-center mt-4">Chi tiết nhân viên</h2>
  <div class="mb-3 ms-3">
    <img
      src="/images/avatar.jpg"
      class="rounded-circle"
      width="150"
      height="150"
    />
  </div>
  <button class="btn btn-warning">Thay đổi ảnh đại diện</button>
  <form>
    <div class="mb-3 mt-3">
      <label for="fullName" class="form-label required">Họ Tên</label>
      <input
        type="text"
        class="form-control"
        id="fullName"
        placeholder="Nhập họ tên"
        readonly
      />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label required">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        placeholder="Nhập email"
        readonly
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label required">Số điện thoại</label>
      <input
        type="tel"
        class="form-control"
        id="phone"
        placeholder="Nhập số điện thoại"
        readonly
      />
    </div>
    <div class="mb-3">
      <label for="birthdate" class="form-label">Ngày tháng năm sinh</label>
      <input type="date" class="form-control" id="birthdate" readonly />
    </div>
    <div class="mb-3">
      <label for="role" class="form-label required">Quyền</label>
      <select class="form-select" id="role" required>
        <option value="">Chọn quyền</option>
        <option value="user">User</option>
        <option value="nhân viên">Staff</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="role" class="form-label required">Trạng thái</label>
      <select class="form-select" id="role" required>
        <option value="">Chọn trạng thái</option>
        <option value="user">Active</option>
        <option value="nhân viên">Close</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="role" class="form-label required">Giới tính</label>
      <select class="form-select" id="role" required>
        <option value="">Chọn giới tính</option>
        <option value="nam">Nam</option>
        <option value="nữ">Nữ</option>
      </select>
    </div>
    <button onclick="window.history.back()" class="btn btn-secondary">
      Quay lại
    </button>
    <a href="/employee/edit/:id" class="btn btn-primary"
      >Sửa thông tin nhân viên</a
    >
    <button class="btn btn-danger">Xoá nhân viên</button>
  </form>
</div>
