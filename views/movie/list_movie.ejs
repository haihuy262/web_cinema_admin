<%- include('../partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Management</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/antd/4.16.13/antd.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="mt-5" style="margin: 8%; padding-top: 5%;">
    <h2>Movie Management</h2>
    <table class="table table-bordered">
      <thead>
        <tr style="background-color: aquamarine;">
          <th>Stt</th>
          <th>Name</th>
          <th>Duration</th>
          <th>Director</th>
          <th>Genre</th>
          <th>Language</th>
          <th>Subtitle</th>
          <th>Censorship</th>
          <th>Actors</th>
          <th>Rate</th>
          <th>Storyline</th>
          <th>Movie Format</th>
          <th>Release Date</th>
          <th>Image</th>
          <th style="width: 15%;">Trailer</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Bay Nuot Mang</td>
          <td>2:30h</td>
          <td>John Doe</td>
          <td>Action, Drama</td>
          <td>English</td>
          <td>Viet Nam</td>
          <td>18+</td>
          <td>Actor 1, Actor 2</td>
          <td>4</td>
          <td>Nhung nguy hien khi phai doi mat voi cac bay</td>
          <td>3D</td>
          <td>2024-06-30</td>
          <td><img src="44805881115823571-Untitled-1.jpg" alt="Image" width="50"></td>
          <td>
            <video width="100%" height="100%" controls>
              <source src="trailer-link" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </td>
          
          <td>
            <a href="/movie/update">
              <img src="/asset/sửa.png" width="40" height="40">
            </a>
            
              <img src="/asset/xoá.jpeg" width="40" height="40" data-toggle="modal" data-target="#deleteMovieModal">
            
          </td>
          
        </tr>
        
      </tbody>
    </table>
  </div>



  <!-- Delete Movie Modal -->
  <div class="modal fade" id="deleteMovieModal" tabindex="-1" role="dialog" aria-labelledby="deleteMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteMovieModalLabel">Confirm Delete</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this movie?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/antd/4.16.13/antd.min.js"></script>
</body>
</html>
