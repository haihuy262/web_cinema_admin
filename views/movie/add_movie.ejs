<%- include('../partials/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Movie</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/antd/4.16.13/antd.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="container mt-5" style="padding: 3%;">
    <h2>Add New Movie</h2>
    <form id="addMovieForm">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group col-md-6">
          <label for="duration">Duration</label>
          <input type="text" class="form-control" id="duration" name="duration" required>
        </div>
        <div class="form-group col-md-6">
          <label for="director">Director</label>
          <select class="form-control" id="director" name="director" required>
            <option value="">test1</option>
            <option value="">test2</option>
            <!-- Thêm các lựa chọn thông qua mã lặp -->
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="genre">Genre</label>
          <select class="form-control" id="genre" name="genre"  required>
            <option value="Action">Action</option>
            <option value="Drama">Drama</option>
            <option value="Comedy">Comedy</option>
            <!-- Thêm các lựa chọn khác nếu cần -->
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="language">Language</label>
          <input type="text" class="form-control" id="language" name="language" required>
        </div>
        <div class="form-group col-md-6">
          <label for="subtitle">Subtitle</label>
          <input type="text" class="form-control" id="subtitle" name="subtitle" required>
        </div>
        <div class="form-group col-md-6">
          <label for="censorship">Censorship</label>
          <input type="text" class="form-control" id="censorship" name="censorship" required>
        </div>
        <div class="form-group col-md-6">
          <label for="actor">Actors</label>
          <select class="form-control" id="actor" name="actor"  required>
            <option value="Actor 1">Actor 1</option>
            <option value="Actor 2">Actor 2</option>
            <!-- Thêm các lựa chọn khác nếu cần -->
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="rate">Rate</label>
          <input type="text" class="form-control" id="rate" name="rate" required>
        </div>
        <div class="form-group col-md-12">
          <label for="storyline">Storyline</label>
          <input type="text" class="form-control" id="storyline" name="storyline" required>
        </div>
        <div class="form-group col-md-6">
          <label for="movie_format">Movie Format</label>
          <input type="text" class="form-control" id="movie_format" name="movie_format" required>
        </div>
        <div class="form-group col-md-6">
          <label for="release_date">Release Date</label>
          <input type="date" class="form-control" id="release_date" name="release_date" required>
        </div>
        <div class="form-group col-md-12">
          <label for="image">Image</label>
          <input type="file" class="form-control" id="image" name="image" required>
        </div>
        <div class="form-group col-md-12">
          <label for="trailer">Trailer</label>
          <input type="file" class="form-control" id="trailer" name="trailer" required>
        </div>
      </div>
      <button type="button" class="btn btn-primary" onclick="submitMovieForm()">Add</button>
      <a href="/" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/antd/4.16.13/antd.min.js"></script>
  <script>
    function submitMovieForm() {
      const form = document.getElementById('addMovieForm');
      const formData = new FormData(form);
      // Perform AJAX request or form submission here
      console.log(Object.fromEntries(formData.entries()));
      alert('Movie added successfully');
      window.location.href = '/';
    }
  </script>
</body>
</html>

