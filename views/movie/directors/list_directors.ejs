<%- include('../../partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List Directors</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/antd/4.16.13/antd.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5" style="padding: 3%;">
    <h2>List of Directors</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Stt</th>
          <th>Name</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
       
        <tr>
          <td>1</td>
          <td>Director 1</td>
          <td><img src="director1.jpg" alt="Director 1" width="50"></td>
          <td>
            <a href="/director/update" class="btn btn-info">
              <i class="anticon anticon-edit"></i> Edit
            </a>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteDirectorModal">
              <i class="anticon anticon-delete"></i> Delete
            </button>
          </td>
        </tr>
        <tr>
          <td>2</td>
          <td>Director 2</td>
          <td><img src="director2.jpg" alt="Director 2" width="50"></td>
          <td>
            <a href="/director/update" class="btn btn-info">
              <i class="anticon anticon-edit"></i> Edit
            </a>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteDirectorModal">
              <i class="anticon anticon-delete"></i> Delete
            </button>
          </td>
        </tr>
        <!-- Các dòng dữ liệu tương tự cho các đạo diễn khác -->
      </tbody>
    </table>
  </div>

  <!-- Modal Xác nhận Xóa Director -->
  <div class="modal fade" id="deleteDirectorModal" tabindex="-1" role="dialog" aria-labelledby="deleteDirectorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteDirectorModalLabel">Xác nhận Xóa</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Bạn có chắc chắn muốn xóa đạo diễn này?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
          <button type="button" class="btn btn-danger">Xóa</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
