<%- include('../partials/header.ejs') %>
<nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Quản lý dịch vụ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Tạo đồ ăn</li>
  </ol>
</nav>
<div class="card mb-3">
  <div class="card-body">
    <div class="">
      <form action="/service/createFood" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Tên đồ ăn</label>
          <input type="text" class="form-control" id="name" name="name" required />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Giá đồ ăn</label>
          <input type="number" class="form-control" id="price" name="price" required />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Ảnh đồ ăn</label>
          <input type="file" class="form-control" id="image" name="image" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Lưu</button>
      </form>
    </div>
  </div>
</div>
